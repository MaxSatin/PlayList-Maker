    <style name="NewPlayListInputTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="ClassicAttributes">
        <item name="android:background">@drawable/playlist_edit_bottom_background</item>
        <item name="android:textColor">@color/yp_black</item>

    </style>

    <style name="PlaylistNotificationStyle">
        <item name="android:background">@drawable/tracklist_notification_background</item>
        <item name="android:textColor">@color/white</item>
