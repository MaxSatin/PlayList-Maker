<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="InnerActivityLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="InnerActivityHeaderFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">52dp</item>

    </style>

    <style name="SettingsActivityButtonFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingRight">@dimen/padding_16</item>
    </style>

    <style name="SettingsActivityButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/grey</item>
    </style>

    <style name="SettingsActivityButtonBack" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SearchActivityTextInput">
        <item name="android:background">@drawable/search_input</item>
    </style>

    <style name="SearchActivityTrackColor">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="SearchActivityTrackSongText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchActivityTrackArtistText">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="SearchActivityNothingFoundTextPH">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchActivityNothingFoundImagePH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/vector_nothing_found_light_mode</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchActivityBadConnectionImagePH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/vector_connection_error_light_mode</item>
    </style>

    <style name="RefreshButtonStyle">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SearchHistoryHeader">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlayerTrackBackGround">
        <item name="android:background">@color/white</item>
    </style>

    <style name="PlayerTrackButtonBack">
        <item name="android:src">@drawable/vector_arrow_back</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="PlayerTrackButtonPlay">
        <item name="android:background">@drawable/play_button_background_selector</item>
        <item name="android:foreground">@drawable/play_button_image_selector</item>

    </style>

    <style name="PlayerTrackButtonaAddToTrackList">
        <item name="android:src">@drawable/vector_add_to_track_list</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="PlayerTrackButtonAddToFav">
        <item name="android:background">@drawable/add_to_favorites_background_selector</item>
        <item name="android:foreground">@drawable/add_to_favorites_image_selector_night</item>
    </style>

    <style name="PlayerTrackText">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="PlayerProgressTrackText">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="loadingOverlayStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ToolbarHeader">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
    </style>

    <style name="TabLayOutTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LibraryNothingFoundTextPH">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/yp_black</item>
        <item name="tabTextColor">@color/yp_black</item>
        <item name="tabTextAppearance">@style/TabLayOutTextStyle</item>
    </style>


    <style name="ToolBarStyle">
        <item name="android:titleTextColor">@color/yp_black</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextAppearance</item>

    </style>

    <style name="BottomNavTextAppearance" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:color">@color/yp_black</item>
    </style>

    <style name="ys_display_regular_text_12" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:color">@color/yp_black</item>
    </style>

    <style name="ys_display_regular_text_14" >
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/yp_black</item>
    </style>

    <style name="ys_display_medium_text_16" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/yp_black</item>
    </style>

    <style name="ys_display_medium_text_19" >
