    <style name="CreatePlaylistInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/create_playlist_text_input_selector</item>
        <item name="android:textColorHint">@color/yp_black</item>
