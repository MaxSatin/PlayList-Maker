<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/yp_black</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="InnerActivityLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/yp_black</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsActivityButtonFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingRight">@dimen/padding_16</item>
    </style>

    <style name="SettingsActivityButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:text">@string/Dark_Mode</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="SettingsActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="SettingsActivityButtonBack" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="SearchActivityTextInput">
        <item name="android:background">@drawable/search_input</item>
    </style>

    <style name="SearchActivityTrackColor">
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>

    <style name="SearchActivityTrackSongText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchActivityTrackArtistText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchActivityNothingFoundTextPH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchActivityNothingFoundImagePH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/vector_nothing_found_dark_mode</item>
    </style>

    <style name="SearchActivityBadConnectionImagePH">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/vector_badconnection_dark_mode</item>
    </style>

    <style name="RefreshButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="SearchHistoryHeader">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerTrackBackGround">
        <item name="backgroundTint">@color/yp_black</item>
    </style>

    <style name="PlayerTrackButtonBack">
        <item name="android:src">@drawable/vector_player_button_back_black_mode</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PlayerTrackButtonPlay">
        <item name="android:background">@drawable/play_button_selector_nightmode</item>
        <item name="iconTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PlayerTrackButtonaAddToTrackList">
        <item name="android:src">@drawable/vector_add_to_tracklist_black_mode</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PlayerTrackButtonaAddToFav">
        <item name="android:src">@drawable/vector_add_to_favorites_black_mode</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PlayerTrackText">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="PlayerProgressTrackText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="loadingOverlayStyle">
        <item name="android:background">@color/yp_black</item>
    </style>



</resources>