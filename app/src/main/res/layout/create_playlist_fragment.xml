        <EditText
            android:id="@+id/playlistNameEditText"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:background="@drawable/create_playlist_text_input_shape_selector"
            android:layout_marginTop="@dimen/padding_32"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/imagepickArea"
            app:layout_constraintStart_toEndOf="@id/leftBorder"
            app:layout_constraintEnd_toStartOf="@id/rightBorder"/>
        <TextView
            android:id="@+id/playListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Название* "
            android:background="@color/white"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/yp_blue"
            android:textFontWeight="400"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginBottom="46dp"
            app:layout_constraintStart_toEndOf="@id/leftBorder"
            app:layout_constraintBottom_toBottomOf="@id/playlistNameEditText"/>

        <EditText
            android:id="@+id/playlistDescriptionEditText"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:background="@drawable/create_playlist_text_input_shape_selector"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:singleLine="true"
            android:layout_marginTop="@dimen/padding_16"
            app:layout_constraintTop_toBottomOf="@id/playlistNameEditText"
            app:layout_constraintStart_toEndOf="@id/leftBorder"
            app:layout_constraintEnd_toStartOf="@id/rightBorder"/>

        <TextView
            android:id="@+id/playlistDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Описание "
            android:background="@color/white"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/yp_blue"
            android:textFontWeight="400"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginBottom="46dp"
            app:layout_constraintStart_toEndOf="@id/leftBorder"
            app:layout_constraintBottom_toBottomOf="@id/playlistDescriptionEditText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createPlayListButton"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginBottom="@dimen/padding_32"
        android:background="@drawable/create_playlist_button_selector"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/create_playlist"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        app:layout_constraintStart_toEndOf="@id/leftBorder" />

