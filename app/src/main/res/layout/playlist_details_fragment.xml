<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".medialibrary.ui.playlist_details_fragment.PlaylistDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/PlayerTrackBackGround"
        android:id="@+id/playerActivity"
        android:background="@color/grey_pale"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/padding_24"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_end="@dimen/padding_24"
        android:orientation="vertical" />

        <Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:navigationIcon="@drawable/vector_arrow_back"
            android:titleTextAppearance="@style/ToolbarHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTag="toolbar"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/buttonBackBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:barrierDirection="bottom"
        app:constraint_referenced_tags="toolbar" />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/buttonBackBarrier"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        app:srcCompat="@drawable/vector_empty_album_placeholder"
        android:visibility="visible"/>

        <TextView
            android:id="@+id/playlistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_24"
            app:layout_constraintTop_toBottomOf="@id/poster"
            app:layout_constraintStart_toStartOf="@id/leftBorder"
            android:textSize="@dimen/text_size_24sp"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="700"
            android:textStyle="bold"
            android:textColor="@color/yp_black"
            android:maxLines="1"
            android:maxLength="35"
            android:ellipsize="end"
            tools:text="The Greatest playlist of all time"/>

        <TextView
            android:id="@+id/playlistDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8"
            app:layout_constraintTop_toBottomOf="@id/playlistTitle"
            app:layout_constraintStart_toStartOf="@id/leftBorder"
            android:textSize="@dimen/text_size_18sp"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:textColor="@color/yp_black"
            android:maxLines="1"
            android:maxLength="35"
            android:ellipsize="end"
            tools:text="2002"/>

        <LinearLayout
            android:id="@+id/playlistContents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/playlistDescription"
            app:layout_constraintStart_toEndOf="@id/leftBorder">

            <TextView
                style="@style/PlayerTrackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18sp"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:textColor="@color/yp_black"
                android:id="@+id/playlistDuration"
                tools:text="300 минут"
                android:layout_gravity="bottom"
                android:maxLines="1"
                android:maxLength="35"
                android:ellipsize="end"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/track_dot"
                app:tint="@color/yp_black" />

            <TextView
                style="@style/PlayerTrackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18sp"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:textColor="@color/yp_black"
                android:id="@+id/tracksNumber"
                tools:text="98 треков"
                android:layout_gravity="bottom"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/shareIc"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/padding_16"
            android:src="@drawable/share_vector_24"
            app:layout_constraintTop_toBottomOf="@id/playlistContents"
            app:layout_constraintStart_toEndOf="@id/leftBorder"/>

        <ImageView
            android:id="@+id/moreIc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_marginLeft="@dimen/padding_16"
            android:src="@drawable/more_vector_vert_24"
            app:layout_constraintTop_toBottomOf="@id/playlistContents"
            app:layout_constraintStart_toEndOf="@id/shareIc"/>

        <FrameLayout
            style="@style/loadingOverlayStyle"
            android:id="@+id/loadingScreen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/ClassicAttributes"
            android:id="@+id/trackListBSContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_16"
            app:behavior_peekHeight="260dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:visibility="visible">

            <View
                android:id="@+id/view"
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/trackListRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_24"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/track_item"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/emptyPlaylistsPH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/padding_24"
                android:visibility="gone">

                <ImageView
                    style="@style/SearchActivityNothingFoundImagePH"
                    android:id="@+id/emptyLibraryImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_16"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    style="@style/LibraryNothingFoundTextPH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_16"
                    android:text="@string/playlist_is_empty"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ClassicAttributes"
        android:id="@+id/editPlayListBSContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_16"
        app:behavior_hideable="true"
        app:behavior_peekHeight="260dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintTop_toBottomOf="@id/playlistTitle"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        android:visibility="visible">

        <View
            style="@style/ClassicAttributes"
            android:id="@+id/editPLView"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            style="@style/SearchActivityTrackColor"
            android:id="@+id/playListPreview"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/editPLView"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/playListPreviewImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    style="@style/SearchActivityTrackSongText"
                    android:id="@+id/playListPreviewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    tools:text="item_text_text"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SearchActivityTrackArtistText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/playListPreviewTrackCount"
                        tools:text="item_text_text"
                        android:layout_gravity="bottom"
                        android:maxLines="1"
                        android:maxLength="35"
                        android:ellipsize="end"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/NewPlayListInputTextAppearance"
            android:id="@+id/editShare"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingVertical="@dimen/padding_20"
            android:paddingHorizontal="@dimen/padding_16"
            app:layout_constraintTop_toBottomOf="@id/playListPreview"
            app:layout_constraintStart_toStartOf="parent"
            android:maxLines="1"
            android:maxLength="35"
            android:ellipsize="end"
            android:text="Поделиться"/>
        <TextView
            style="@style/NewPlayListInputTextAppearance"
            android:id="@+id/editEditPl"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingVertical="@dimen/padding_20"
            android:paddingHorizontal="@dimen/padding_16"
            app:layout_constraintTop_toBottomOf="@id/editShare"
            app:layout_constraintStart_toStartOf="parent"
            android:maxLines="1"
            android:maxLength="35"
            android:ellipsize="end"
            android:text="Редактировать информацию"/>

        <TextView
            style="@style/NewPlayListInputTextAppearance"
            android:id="@+id/editDeletePl"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:paddingVertical="@dimen/padding_20"
            android:paddingHorizontal="@dimen/padding_16"
            app:layout_constraintTop_toBottomOf="@id/editEditPl"
            app:layout_constraintStart_toStartOf="parent"
            android:maxLines="1"
            android:maxLength="35"
            android:ellipsize="end"
            android:text="Удалить плейлист"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/deleteTrackDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/exitdialogshape"
        android:elevation="@dimen/padding_24"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/endEditingtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                android:fontFamily="@font/ys_display_medium"
                android:textSize="@dimen/text_size_16sp"
                android:paddingHorizontal="@dimen/padding_16"
                android:text="@string/delete_track_from_playlist"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dataWillBeLosttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                android:fontFamily="@font/ys_display_medium"
                android:textSize="@dimen/text_size_16sp"
                android:gravity="start"
                android:paddingHorizontal="@dimen/padding_16"
                android:text="@string/check_deletion_intent"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/endEditingtv" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/padding_8"
                android:layout_marginVertical="@dimen/padding_16"
                android:background="@drawable/create_playlist_button_inactive"
                android:elevation="@dimen/padding_8"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/confirm_deletion"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cancel"
                app:layout_constraintTop_toBottomOf="@id/dataWillBeLosttv" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginHorizontal="@dimen/padding_16"
                android:layout_marginVertical="@dimen/padding_16"
                android:background="@drawable/create_playlist_button"
                android:elevation="@dimen/padding_8"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dataWillBeLosttv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/deletePlaylistDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/exitdialogshape"
        android:elevation="@dimen/padding_24"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightBorder"
        app:layout_constraintStart_toEndOf="@id/leftBorder"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deletePlaylistTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                android:fontFamily="@font/ys_display_medium"
                android:textSize="@dimen/text_size_16sp"
                android:paddingHorizontal="@dimen/padding_16"
                android:text="@string/delete_playlist"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/playlistDeleteIntentTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                android:fontFamily="@font/ys_display_medium"
                android:textSize="@dimen/text_size_16sp"
                android:gravity="start"
                android:paddingHorizontal="@dimen/padding_16"
                android:text="@string/check_playlist_deletion_intent"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deletePlaylistTV" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deletePlaylistButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/padding_8"
                android:layout_marginVertical="@dimen/padding_16"
                android:background="@drawable/create_playlist_button_inactive"
                android:elevation="@dimen/padding_8"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/confirm_deletion"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cancelPlaylistDeletion"
                app:layout_constraintTop_toBottomOf="@id/playlistDeleteIntentTV" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelPlaylistDeletion"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginHorizontal="@dimen/padding_16"
                android:layout_marginVertical="@dimen/padding_16"
                android:background="@drawable/create_playlist_button"
                android:elevation="@dimen/padding_8"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playlistDeleteIntentTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nothingToShareNotification"
        style="@style/PlaylistNotificationStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="@dimen/padding_16"
        android:paddingHorizontal="@dimen/padding_8"
        android:layout_marginHorizontal="@dimen/padding_8"
        android:layout_marginBottom="@dimen/padding_16"
        android:layout_gravity="bottom"
        android:text="@string/nothing_to_share"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>